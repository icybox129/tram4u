<%- include("header") -%>
<div>
    <div class="background">
        <div class="top-container">
            <div class="top-logo">
                <img src="/images/tram4u-final.png" alt="tram4u logo">
                <h1>Tram4U</h1>
            </div>
            <div>
                <%- include("dropdown") -%>
                <% if (locals.secondDepart !== null) { %>
                    
                    <div class="results-container">
                        <div class="headsign">Yellow Line: Piccadilly</div>
                        <div class="departure">
                            <div class="departure-station">
                                <p>Bury</p>
                            </div>
                            <div class="departure-time">
                                <p style="color:<%= firstColour %>;"><span>Departure at:</span><span><%= firstDepart %></span></p>
                                <p style="color:<%= firstColour %>;"><span>Leaving in:</span><span><%= firstDepart %></span></p>
                            </div>
                        </div>
                        <div class="arrival">
                            <div class="arrival-station">
                                <p>Bury</p>
                            </div>
                            <div class="arrival-time">
                                <p style="color:<%= firstColour %>;"><span>Arrival Time:</span><span><%= firstArrival %></span></p>
                                <p style="color:<%= firstColour %>;"><span>Duration:</span><span><%= firstArrival %></span></p>
                            </div>
                        </div>

